<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Album</title>
    <link rel="stylesheet" href="/createUpdate.css">
</head>
<body>
    <h1>New Album</h1>
    <%- include("partials/errors.ejs") %>
    <form action="/album/new" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>
        </div>
        <div>
            <label for="artist">Artist:</label>
            <input type="text" id="artist" name="artist" required>
        </div>
        <div>
            <label for="release">Release:</label>
            <input type="date" id="release" name="release" required>
        </div>
        <fieldset>
            <legend>Genre</legend> 
            <% genres.forEach(genre => { %>
                <div>
                    <input type="checkbox" id="<%= genre.name %>" name="<%= genre.name %>">
                    <label for="<%= genre.name %>"><%= genre.name %></label>
                </div>
            <% }) %>
        </fieldset>
        <div>
            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" required>
        </div>
        <button type="submit">Submit</button>
        </form>
    <a href="/album">Back to Albums</a>
</body>
</html>