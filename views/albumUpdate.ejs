<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Album</title>
</head>
<body>
    <h1>Update Album</h1>
    <%- include("partials/errors.ejs") %>
    <form action="/album/<%= album.title %>/update" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= album.title %>" required>
        <label for="artist">Artist:</label>
        <input type="text" id="artist" name="artist" value="<%= album.artist %>" required>
        <label for="release">Release:</label>
        <input type="date" id="release" name="release" value="<%= album.release.toISOString().slice(0,10) %>" required>
        <fieldset>
            <legend>Genre</legend> 
            <% genres.forEach( genre => { %>
                <% if (album.genre.includes(genre.name)) { %>
                    <input type="checkbox" id="<%= genre.name %>" name="<%= genre.name %>" checked>
                <% } else { %>
                    <input type="checkbox" id="<%= genre.name %>" name="<%= genre.name %>">
                <% } %> 
                <label for="<%= genre.name %>"><%= genre.name %></label>
            <% }) %>
        </fieldset>
        <label for="quantity">Quantity:</label>
        <input type="num" id="quantity" name="quantity" value="<%= album.quantity %>" required>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        <button type="submit">Submit</button>
    </form>
    <a href="/album">Back to Albums</a>
</body>
</html>